<div class="ui inverted vertical masthead center aligned segment" id='hero-banner'>
  <div class="ui container">
    <div class="ui large secondary inverted pointing menu">
      <a class="toc item">
        <i class="sidebar icon"></i>
      </a>
      <a class="active item">Home</a>
      <a class="item">Profile</a>
      <% if user_signed_in? %>
        <div class="right item">
          <div class="ui compact menu">
            <div class="ui simple dropdown item" id='accountBtn'>
              Username
              <i class="dropdown icon"></i>
              <div class="menu">
                <div class="item">Profie</div>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "item" %>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="right item">
          <%= link_to "Login / Sign up", new_user_session_path, class: "ui inverted button" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="ui text container major-1">
    <h1 class="ui inverted header hero-heading">
      Made For <span><u class='double-underline'>You</u></span> - By Music Lovers
    </h1>
    <h2>Noted is a music website for music lovers to express their opinions about music.</h2>
    <%= form_tag search_path, method: :get do %>
      <div class="ui fluid icon input">
        <%= text_field_tag :searchText, params[:searchText], placeholder: "Search an artisit now...", class: "ui big icon input"%>
        <i class="search icon"></i>
      </div>
    <% end %>
  </div>
</div>
